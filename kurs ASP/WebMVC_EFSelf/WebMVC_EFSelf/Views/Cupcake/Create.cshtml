@model WebMVC_EFSelf.Models.Cupcake
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link type="text/css" rel="stylesheet" href="~/css/cupcakes-styles.css" />
</head>
<body>
<div class="container">
    <h1 class="main-title">Dodaj nowe ciastko do sklepu</h1>
    <form method="post" enctype="multipart/form-data" asp-action="Create">
        <div asp-validation-summary="All"></div>
        <div class="form-field">
            <label asp-for="Bakery"></label>
            <select asp-for="BakeryId" asp-items="ViewBag.BakeryID">
                <option selected="selected">Wybierz opcję</option>
            </select>
            <span asp-validation-for="BakeryId"></span>
        </div>
        <div class="form-field">
            <label asp-for="CupcakeType"></label>
            <select asp-for="CupcakeType" asp-items="Html.GetEnumSelectList<CupcakeType>()">
                <option selected="selected">Wybierz typ ciastka</option>
            </select>
            <span asp-validation-for="CupcakeType"></span>
        </div>
        <div class="form-field">
            <label asp-for="Description"></label>
            <textarea asp-for="Description"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-field">
            <label asp-for="GlutenFree"></label>
            <input asp-for="GlutenFree">
            <span asp-validation-for="GlutenFree"></span>
        </div>
        <div class="form-field">
            <label asp-for="Price"></label>
            <input asp-for="Price">
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-field">
            <label asp-for="CaloricValue"></label>
            <input asp-for="CaloricValue">
            <span asp-validation-for="CaloricValue"></span>
        </div>
        <div class="form-field">
            <label asp-for="PhotoAvatar"></label>
            <input asp-for="PhotoAvatar" type="file">
            <span asp-validation-for="PhotoAvatar"></span>
        </div>
        <div class="form-field">
            <input value="Zapisz" type="submit">
        </div>
    </form>
</div>
</body>
</html>