@model IEnumerable<WebMVC_DB2_sp.Models.Animal>

<div class="container">
    <h1>Lista zwierzątek domowych</h1>
    <table class="table table-bordered">
        <tr>
            <th>@Html.DisplayNameFor(model=>model.Name)</th>
            <th>@Html.DisplayNameFor(model=>model.Weight)</th>
            <th>@Html.DisplayNameFor(model=>model.Description)</th>
            <th></th>
        </tr>
        @foreach (Animal animal in Model) {
            <tr>
                <td><a asp-action="Details" asp-route-id="@animal.Id">@Html.DisplayFor(modelItem => animal.Name)</a></td>
                <td>@Html.DisplayFor(modelItem=>animal.Weight)</td>
                <td>@Html.DisplayFor(modelItem=>animal.Description)</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@animal.Id" class="btn btn-danger">Usuń</a> 
                    <a asp-action="Edit" asp-route-id="@animal.Id" class="btn btn-primary">Edytuj</a> 

                </td>
            </tr>
        }
    </table>
    <div>
        <a asp-action="Create" class="btn btn-primary">Utwórz nowy</a>
    </div>
</div>
